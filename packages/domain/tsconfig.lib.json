{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "references": [],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
